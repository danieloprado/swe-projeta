@model PlanSchool.Web.Models.LoginViewModel

<form ng-submit="submit($event)" class="login-form">
    <div class="row">

        <div class="col-md-4 col-md-offset-4">
            <div class="input-group">
                @Html.LabelFor(m => m.Login, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control", ng_model = "model.login" })
                @Html.ValidationMessageFor(m => m.Login)
            </div>

            <div class="input-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", ng_model = "model.password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="text-right">
                <button type="submit" class="btn btn-info">Entrar</button>
            </div>

        </div>

    </div>
</form>