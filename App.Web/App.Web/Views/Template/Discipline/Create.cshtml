@model PlanSchool.Web.Models.DisciplineViewModel

<form ng-submit="submit($event)">
    
    <div class="modal-header">
        <button type="button" class="close" ng-click="$dismiss()"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Criar Disciplina</h4>
    </div>
    <div class="modal-body">

        <div class="input-group">
            @Html.LabelFor(m => m.Name, new {@class = "control-label"})
            @Html.TextBoxFor(m => m.Name, new {@class = "form-control", ng_model = "model.name"})
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="$dismiss()">Cancelar</button>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>

</form>
